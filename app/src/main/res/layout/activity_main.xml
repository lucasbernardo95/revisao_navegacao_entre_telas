        android:layout_height="wrap_content"
        android:text="Verde"
        android:textColor="#00FF00"
        android:id="@+id/verdeNreturn"
        android:layout_below="@+id/textView"
        android:layout_alignParentEnd="true"
        android:onClick="escolheCor"/>
    <Button
